<UserControl
    x:Class="Warehouse_Management.View.SupplyPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Warehouse_Management.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Warehouse_Management.ViewModel.EntitiesVM"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="{StaticResource MaterialDesignLightSeparatorBackground}" ShowGridLines="True">
        <Grid.Resources>
            <SolidColorBrush x:Key="brush" Color="White" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <ComboBox
            ItemsSource="{Binding WarehousesList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Background="{StaticResource MaterialDesignDarkBackground}"
            BorderBrush="{StaticResource MaterialDesignShadowBrush}"
            Foreground="{StaticResource MaterialDesignDarkForeground}"
            SelectedItem="{Binding SelectedWarehouse}"
            SelectedValue="0"
            Style="{StaticResource MaterialDesignFilledComboBox}"
            TextBlock.FontFamily="{StaticResource MaterialDesignFont}"
            TextBlock.FontSize="20"
            TextBlock.TextAlignment="Left">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding WarehouseName}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <ListBox
            ItemsSource="{Binding TrucksList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
            Grid.Row="1"
            Grid.Column="0"
            SelectedItem="{Binding SelectedTruck}"
            Style="{StaticResource MaterialDesignListBox}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="{Binding Manafacturer}" ContentStringFormat="Brand: {0}" />
                        <Label Content="{Binding Model}" ContentStringFormat="Model: {0}" />
                        <Label Content="{Binding ModelYear}" ContentStringFormat="Production year: {0}" />
                        <Label Content="{Binding Mileage}" ContentStringFormat="Mileage: {0} km" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox
            ItemsSource="{Binding SemitrailersList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
            Grid.Row="1"
            Grid.Column="1"
            SelectedItem="{Binding SelectedSemitrailer}"
            Style="{StaticResource MaterialDesignListBox}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>


                        <Label Content="{Binding Id}" ContentStringFormat="Semitrailer n0 {0} " />
                        <Label Content="{Binding MaxAxleLoad}" ContentStringFormat="Max Axle Load: {0} " />
                        <Label Content="{Binding MaxVolume}" ContentStringFormat="Max volume: {0} " />

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox
            ItemsSource="{Binding ProductsList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
            Grid.Row="1"
            Grid.Column="2"
            SelectedItem="{Binding SelectedProduct}"
            Style="{StaticResource MaterialDesignListBox}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="{Binding Name}" ContentStringFormat="Name: {0}" />
                        <Label Content="{Binding Price}" ContentStringFormat="Price: {0}zl" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Grid.Column="1">
            <Button Command="{Binding AddToWarehouse}">Add</Button>

        </StackPanel>
    </Grid>
</UserControl>